if currentUser
    a#logout.ui.inverted.grey.button(href='#') 
        i.sign.out.icon
        | #{currentUser.username}
else
    a.ui.icon.inverted.grey.button(href='/sign-in') 
        i.sign.in.icon
.ui.divider
if currentUser
    .ui.inverted.transparent.massive.fluid.input
        input#quick_add(type='text' placeholder='add')
.ui.divider
.ui.inverted.transparent.massive.fluid.input
    input#search(type='text' placeholder='search' autofocus='' autocomplete='off')
    // +inputAutocomplete settings=settings id="search" class="" autocomplete="off" placeholder='search' autofocus=''
.ui.divider
if selected_tags
    #clear_tags.ui.big.icon.inverted.massive.button
        i.remove.icon
if selected_tags
    each selected_tags
        a.ui.big.inverted.massive.button.unselect_tag
            strong #{this}
    .ui.divider
each all_tags
    .ui.inverted.grey.button.select_tag(class=tag_cloud_class) #{this.name}
        // small #{this.count}
