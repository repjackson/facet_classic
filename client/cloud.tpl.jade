if currentUser
    a#logout.ui.inverted.white.large.button(href='#') 
        i.sign.out.icon
        | #{currentUser.username}
    #add.ui.large.inverted.icon.large.button
        i.plus.icon
else
    a.ui.icon.inverted.white.button(href='/sign-in') 
        i.sign.in.icon
// .ui.hidden.divider
.ui.inverted.transparent.large.left.icon.input
    i.search.icon
    input#search(type='text' autofocus='' autocomplete='off')
.ui.hidden.divider
if selected_tags
    #clear_tags.ui.icon.inverted.white.huge.button
        i.remove.icon
if selected_tags
    each selected_tags
        a.ui.inverted.white.huge.button.unselect_tag
            strong #{this}
each all_tags
    .ui.inverted.white.button.select_tag(class=tag_cloud_class) 
        strong #{this.name}
        // small #{this.count}
