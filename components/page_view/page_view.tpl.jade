with item
    .ui.container
        .image
            img.ui.centered.image(src="{{c.url image_id height=400 width=800 background='white' crop='lpad'}}")
            h1.ui.center.aligned.header #{title}
        .ui.hidden.divider
        .ui.divided.stackable.grid
            .ten.wide.column
                // .meta
                //     a(href=link target='_blank') #{link}
                .description
                    |!{description}
                .ui.divider
                +user_blurb
            .five.wide.column
                h2.ui.header Tags
                each tags
                    .ui.basic.label #{this}
                if isInRole 'admin'
                    h2.ui.header Status
                    .extra.content
                        .ui.divider
                        i.large.red.configure.icon
                        .edit.ui.primary.basic.button
                            i.pencil.icon
                            |Edit