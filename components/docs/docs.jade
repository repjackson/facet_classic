template(name='docs')
    .ui.container
        .ui.divided.relaxed.items
            each docs
                +item

template(name='item')
    .ui.item
        if image_id
            .image
                a(href="/view/#{_id}")
                    img.ui.large.centered.image(src="{{c.url image_id width=400 height=400 gravity='face' crop='fill' }}")
        .content
            .description
                |!{body}
            .extra
                div by {{author.username}} #{when}
            .meta
                each tags
                    .ui.button.tag(class=tag_class) #{this}
            a.ui.icon.button(href="/view/#{_id}")
                i.angle.right.icon
            if can_edit
                .edit.ui.icon.button
                    i.pencil.icon
                .clone.ui.icon.button
                    i.fork.icon
                .delete.ui.icon.button
                    i.remove.icon