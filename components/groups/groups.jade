template(name='groups')
    .ui.container
        h1.ui.center.aligned.header Groups
        +group_cloud
        +group_items
        #add_group.ui.basic.big.circular.icon.button
            i.green.plus.icon
        
    
    

template(name='group_cloud')
    #cloud.ui.basic.segment.center.aligned.container
        .ui.left.icon.input
            i.search.icon
            +inputAutocomplete settings=settings id="search" class="" autocomplete="off" 
        if selected_group_tags
            #clear_tags.ui.primary.icon.circular.large.button
                i.remove.icon
            each selected_group_tags
                .unselect_tag.ui.primary.circular.large.button
                    strong #{this}
        each group_tags
            .ui.circular.basic.button.select_tag(class=cloud_tag_class) 
                strong #{this.name}
                // small #{this.count}


template(name='group_items')
    .ui.container
        .ui.divided.items
            each groups
                +group_item



template(name='group_item')
    .item
        .image
            img.ui.fluid.image(src="{{c.url image_id height=400 width=800 background='white' crop='pad'}}")
        .content
            a(href="/group/view/#{_id}")
                .ui.header #{name}
            .description !{description}
            .extra
                each tags
                    .ui.basic.tiny.button #{this}
                a.ui.basic.circular.icon.button(href="/group/edit/#{_id}")
                    i.blue.pencil.icon