with group
    .ui.container
        h1.ui.center.aligned.header #{name}
        .ui.stackable.grid
            .twelve.wide.column
                if is_member
                    +cloud
                    .ui.hidden.divider
                    +docs
            .four.wide.column
                if is_member
                    .ui.header view mode
                    .ui.disabled.button card
                    .ui.disabled.button item
                    .ui.disabled.button map
                    .ui.disabled.button calendar
                    .ui.disabled.button graph
                    .ui.hidden.divider
                .ui.header members
                .ui.bulleted.list
                    each member_list
                        .item #{username}
                .ui.header group tags
                each tags
                    .ui.label #{this}
                if currentUser
                    .ui.header actions
                    if is_member
                        a#add.ui.button
                            | add document
                        #leave_group.ui.button
                            | leave group
                    else
                        #join_group.ui.button
                            | join group
                .ui.hidden.divider
                .ui.horizontal.divider.header Group Type
                if private
                    .ui.big.label Private
                else
                    .ui.big.label Public
                .ui.hidden.divider
                if isInRole 'admin'
                    .extra.content
                        .ui.header 
                            |admin
                        .edit.ui.button
                            | edit group