.ui.inverted.stackable.menu
    .ui.container
        a.header.item(href='/' class="{{isActivePath '/'}}") 
            h3 Facet
        a.item(href='/groups' class="{{isActivePath '/groups'}}") Groups
        .right.menu
            if currentUser.profile.current_group_name
                a#add.ui.item
                    i.plus.icon
                    | Add
                .item Current Group: #{currentUser.profile.current_group_name}
            if currentUser
                .item #{currentUser.username}
                a#logout.ui.item(href='#') 
                    i.sign.out.icon
                    |Sign Out
            else
                a.ui.item(href='/sign-in') 
                    i.sign.in.icon
                    |Sign In
